<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13"
    tools:context="com.jstech.fairy.MoreFunction.Filter">

    <android.support.v7.widget.Toolbar
        android:id="@+id/filter_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20"
            android:background="@drawable/search_background"
            android:padding="7dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_search"
                android:tint="@color/colorGray" />

            <EditText
                android:id="@+id/filter_et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="18"
                android:background="@null"
                android:gravity="top"
                android:hint="검색어 입력"
                android:maxLength="15"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColorHint="@color/colorGray"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/filter_et_search"
                android:layout_weight="1"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="center"
                android:tint="@color/colorGray"
                android:onClick="onClick_search_cancel"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginTop="25dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorLine" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/filter_rb_fee_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유료"
                android:textColor="@color/colorText"/>

            <RadioButton
                android:id="@+id/filter_rb_fee_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="무료"
                android:textColor="@color/colorText"/>

            <RadioButton
                android:id="@+id/filter_rb_fee_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전체"
                android:textColor="@color/colorText"
                android:checked="true" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="카테고리"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/filter_tv_drama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연극"
                android:gravity="center"
                android:background="@drawable/text_background"
                android:layout_marginRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:clickable="true"
                android:onClick="ClickCategory"/>

            <TextView
                android:id="@+id/filter_tv_concert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="콘서트"
                android:gravity="center"
                android:background="@drawable/text_background"
                android:layout_marginRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:clickable="true"
                android:onClick="ClickCategory"/>

            <TextView
                android:id="@+id/filter_tv_festival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="축제"
                android:gravity="center"
                android:background="@drawable/text_background"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:clickable="true"
                android:onClick="ClickCategory"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="2">

        <TextView
            android:id="@+id/filter_tv_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전시/미술"
            android:gravity="center"
            android:background="@drawable/text_background"
            android:layout_marginRight="30dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:clickable="true"
            android:onClick="ClickCategory"/>

        <TextView
            android:id="@+id/filter_tv_opera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="뮤지컬/오페라"
            android:gravity="center"
            android:background="@drawable/text_background"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:clickable="true"
            android:onClick="ClickCategory"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="기간"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="시작" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/StartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="TextView" />

                    <ImageView
                        android:id="@+id/Filter_Date_Chooser_Start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="Date_Choise_Start"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="종료" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/EndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="TextView" />

                    <ImageView
                        android:id="@+id/Filter_Date_Chooser_End"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="Date_Choise_End"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
